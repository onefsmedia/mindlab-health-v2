# Environment Configuration for MindLab Health
# Copy this file to .env and update the values

# Database Configuration
# For PostgreSQL (Production):
DATABASE_URL=postgresql://mindlab_admin:MindLab2024!Secure@localhost:5432/mindlab_health

# For SQLite (Development):
# DATABASE_URL=sqlite:///./mindlab_health.db

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars

# JWT Token Expiration (minutes)
JWT_EXPIRATION_MINUTES=1440

# Application Settings
APP_NAME=MindLab Health
APP_VERSION=2.0.0
DEBUG=False

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# Email Configuration (Optional - for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Admin User (Auto-created on startup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=Admin123!@#
DEFAULT_ADMIN_EMAIL=admin@mindlabhealth.com

# PostgreSQL Backup Settings
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
