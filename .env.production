# Environment Configuration for MindLab Health
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://mindlab_admin:MindLab2024!Secure@localhost:5432/mindlab_health
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mindlab_health
POSTGRES_USER=mindlab_admin
POSTGRES_PASSWORD=MindLab2024!Secure

# JWT Security Configuration
SECRET_KEY=mindlab-health-secret-key-2024-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_BASE_URL=http://localhost:8001/api

# Google Calendar Integration (Optional)
# Uncomment and configure if using Google Calendar features
# GOOGLE_CALENDAR_CREDENTIALS_PATH=/path/to/credentials.json
# GOOGLE_CALENDAR_API_KEY=your_google_api_key

# Email Configuration (Future feature)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_app_password

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration (adjust for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Session Configuration
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5

# Production Security Settings (uncomment for production)
# SECURE_COOKIES=true
# HTTPS_ONLY=true
# HSTS_MAX_AGE=31536000